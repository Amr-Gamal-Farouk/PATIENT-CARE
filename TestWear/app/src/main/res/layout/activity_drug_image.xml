<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueGrey"
    tools:context="com.example.amrgamal.testwear.DrugImage">

    <ImageView
        android:id="@+id/drug_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:background="@color/whaite" />
    <LinearLayout
        android:layout_below="@+id/drug_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:textDirection="rtl"
        android:layoutDirection="rtl">
        <TextView
            android:background="@color/whaite"
            android:id="@+id/user_drug"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="العلاج"
            android:gravity="right"
            android:paddingRight="8dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />


        <TextView
            android:background="@color/whaite"
            android:id="@+id/user_drug_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="4"
            android:paddingLeft="15dp"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="10sp"
            android:text="5:10 AM"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

</RelativeLayout>
